<?xml version="1.0" encoding="utf-8"?>
<com.coversal.ucl.widget.CoversalLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:uclib="namespace"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    

	
<com.coversal.ucl.widget.CoversalLayout 
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/coversal_bg_playing_media"
    android:layout_height="50dp"
    android:gravity="center">
        <TextView 
	    	android:tag="controlset_name"
	    	android:text="Control Set name"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textColor="#5f8dd3"
   			android:textSize="15sp"
   			android:singleLine="true"
	    	android:gravity="left"
	    	android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
	    	android:shadowColor="#000"
	    	android:shadowRadius="3"/>
        
    <TextView 
		android:tag="playing_media_textview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="20sp"
		android:textColor="#ffffff"
		android:text="-"
		android:singleLine="true"
	    android:ellipsize="marquee"
	    android:marqueeRepeatLimit="marquee_forever" 
	    android:gravity="center"
	    android:layout_weight="1"/>
</com.coversal.ucl.widget.CoversalLayout>    


    
<com.coversal.ucl.widget.CoversalRelativeLayout
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#444"
  	android:layout_margin="2dp"
  	android:padding="5dp">
    
    <LinearLayout 
        android:id="@+id/volume"
        android:layout_alignTop="@+id/dpad"
        android:layout_alignBottom="@id/dpad"
        
        android:orientation="vertical"
	    android:gravity="center_vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="3dp">
	        <com.coversal.ucl.widget.Key 
	        	android:tag="volume_up"
		        android:src="@drawable/coversal_volup"
		        android:background="@drawable/rhys_medium_key"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginBottom="15dp"/>
		    <com.coversal.ucl.widget.Key
		    	android:tag="volume_down"
		        android:src="@drawable/coversal_voldown"
		        android:background="@drawable/rhys_medium_key"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"/>
	</LinearLayout>    
	
       <!-- D-Pad -->
    <com.coversal.ucl.widget.CoversalRelativeLayout
        android:id="@id/dpad"
        android:layout_toRightOf="@id/volume"
        android:layout_alignParentRight="true"
                
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/dpad_bg"
	    android:gravity="center"
	    android:padding="5dp">

        <com.coversal.ucl.widget.Key 
		    android:id="@+id/up"
			android:layout_toRightOf="@+id/left"		    
		    android:layout_marginLeft="-20dp"
						
		    android:src="@drawable/up"
	        android:tag="up"
	        android:background="@drawable/rhys_large_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>

   		<com.coversal.ucl.widget.Key 
		    android:id="@id/left"
		    android:layout_below="@id/up"
		    android:layout_marginTop="-20dp"		    
		    
	        		    
	        android:src="@drawable/left"
	        android:tag="left"
	        android:background="@drawable/rhys_large_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>

        <com.coversal.ucl.widget.Key 
			android:layout_above="@id/left"
			android:layout_alignRight="@id/left"
			android:layout_marginBottom="25dp"
			android:layout_marginRight="25dp"
			
		    android:src="@drawable/back2"
	        android:tag="back"
	        android:background="@drawable/rhys_small_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
           				        

		
		<com.coversal.ucl.widget.Key 
		    android:id="@+id/right"
		    android:layout_below="@id/up"
		    android:layout_toRightOf="@id/up"
		    		    
	        android:src="@drawable/right"
	        android:tag="right"
	        android:background="@drawable/rhys_large_key"
	        android:scaleType="centerInside"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="-20dp"
	        android:layout_marginLeft="-20dp"/>
		
		
		<com.coversal.ucl.widget.Key 
		    android:layout_alignLeft="@id/right"
		    android:layout_above="@id/right"
		    android:layout_marginBottom="25dp"
			android:layout_marginLeft="25dp"
		    
	        android:src="@drawable/ok"
	        android:tag="ok"
	        android:background="@drawable/rhys_small_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
		       	
		<com.coversal.ucl.widget.Key
		    android:layout_below="@id/left"
		     android:layout_alignLeft="@id/up"
		       		    
	        android:src="@drawable/down"
	        android:tag="down"
	        android:background="@drawable/rhys_large_key"
	        android:scaleType="centerInside"
            android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
        	android:layout_marginTop="-20dp"/>
    </com.coversal.ucl.widget.CoversalRelativeLayout>
    <!-- LinearLayout 
		android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <TextView android:text="Gesture command"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="6dip"
			android:textColor="#162d50"
			android:background="#ececec"></TextView>
		<com.coversal.ucl.widget.GestureArea
			android:tag="gesture_area"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_margin="1dp"/>
	</LinearLayout-->
	
	<LinearLayout 
	    android:id="@+id/misc"
	    
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp">
	   	
    <com.coversal.ucl.widget.Key
    	android:tag="power"
        android:src="@drawable/coversal_power"
        android:background="@drawable/default_key"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="1"/>
    
     <com.coversal.ucl.widget.Key
        android:tag="fullscreen"
        android:src="@drawable/coversal_fullscreen"
        android:background="@drawable/default_key"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"/>         
             
    <com.coversal.ucl.widget.Key
        android:tag="info" 
        android:src="@drawable/coversal_info"
        android:background="@drawable/default_key"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"/>
    </LinearLayout>	    
    
 	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/dpad"
	    android:layout_above="@id/misc"
	    
	    android:gravity="center"
	    android:orientation="vertical" >

 	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="-10dp"
	    android:paddingBottom="5dp"
	    
	    android:gravity="center"
	    android:orientation="horizontal" > 	 
	       	    	    
	    <com.coversal.ucl.widget.Key
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="9dp"
	        android:background="@drawable/rhys_medium_key"
	        android:src="@drawable/coversal_rewind"
	        android:tag="rewind" />

	    <com.coversal.ucl.widget.Key
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:background="@drawable/rhys_large_key"
	        android:src="@drawable/coversal_play"
	        android:tag="play_pause" />

	    <com.coversal.ucl.widget.Key
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="9dp"
	        android:background="@drawable/rhys_medium_key"
	        android:src="@drawable/coversal_forward"
	        android:tag="forward" />
	</LinearLayout>

	 		
    <LinearLayout 
		android:paddingBottom="10dp"
			            
        android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    	    
	    <com.coversal.ucl.widget.Key
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/rhys_small_key"
	        android:src="@drawable/coversal_previous"
	        android:tag="previous" />

	    <com.coversal.ucl.widget.Key
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        
	        android:background="@drawable/rhys_small_key"
	        android:scaleType="centerInside"
	        android:src="@drawable/coversal_stop"
	        android:tag="stop" />
	    	    
	    <com.coversal.ucl.widget.Key
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/rhys_small_key"
	        android:scaleType="centerInside"
	        android:src="@drawable/coversal_next"
	        android:tag="next" />

	</LinearLayout>
</LinearLayout>
</com.coversal.ucl.widget.CoversalRelativeLayout>
</com.coversal.ucl.widget.CoversalLayout>