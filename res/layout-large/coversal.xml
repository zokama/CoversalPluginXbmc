        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_margin="2dp"/>
	
	<com.coversal.ucl.widget.Key
	    android:tag="custom4"
	    uclib:caption="custom4"
	    android:background="@drawable/default_key"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_margin="2dp"/>
             
    <com.coversal.ucl.widget.Key
        android:tag="custom5"
        uclib:caption="custom5"
	    android:background="@drawable/default_key"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_margin="2dp"/>
    
	 <com.coversal.ucl.widget.Key
	    android:tag="custom6"
	    uclib:caption="custom6"
	    android:background="@drawable/default_key"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_margin="2dp"/>
	         
	 <com.coversal.ucl.widget.Key
	    android:tag="custom7"
	    uclib:caption="custom7"
	    android:background="@drawable/default_key"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_margin="2dp"/>

	<com.coversal.ucl.widget.Key
	    android:tag="custom8"
	    uclib:caption="custom8"
	    android:background="@drawable/default_key"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_margin="2dp"/>	   
        
	<com.coversal.ucl.widget.CoversalImageView 
	    android:src="@drawable/logo"
        android:layout_height="100dip"
        android:layout_width="100dip"
        android:padding="5dp"/>
    </LinearLayout>

    
    
<com.coversal.ucl.widget.CoversalRelativeLayout
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#444"
    android:layout_weight="1"
  	android:layout_margin="2dp"
  	android:padding="5dp">
    
    <LinearLayout 
        android:id="@+id/volume"
        android:layout_alignTop="@+id/dpad"
        android:layout_alignBottom="@id/dpad"
        
        android:orientation="vertical"
	    android:gravity="center_vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="3dp">
	        <com.coversal.ucl.widget.Key 
	        	android:tag="volume_up"
		        android:src="@drawable/coversal_volup"
		        android:background="@drawable/rhys_medium_key"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginBottom="15dp"/>
		    <com.coversal.ucl.widget.Key
		    	android:tag="volume_down"
		        android:src="@drawable/coversal_voldown"
		        android:background="@drawable/rhys_medium_key"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"/>
	</LinearLayout>    
	
       <!-- D-Pad -->
    <com.coversal.ucl.widget.CoversalRelativeLayout
        android:id="@id/dpad"
        android:layout_toRightOf="@id/volume"
        android:layout_alignParentRight="true"
                
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/dpad_bg"
	    android:gravity="center"
	    android:padding="5dp">

        <com.coversal.ucl.widget.Key 
		    android:id="@+id/up"
			android:layout_toRightOf="@+id/left"		    
		    android:layout_marginLeft="-15dp"
						
		    android:src="@drawable/up"
	        android:tag="up"
	        android:background="@drawable/rhys_large_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>

   		<com.coversal.ucl.widget.Key 
		    android:id="@id/left"
		    android:layout_below="@id/up"
		    android:layout_marginTop="-15dp"		    
		    
	        		    
	        android:src="@drawable/left"
	        android:tag="left"
	        android:background="@drawable/rhys_large_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>

        <com.coversal.ucl.widget.Key 
			android:layout_above="@id/left"
			android:layout_alignRight="@id/left"
			android:layout_marginBottom="25dp"
			android:layout_marginRight="25dp"
			
		    android:src="@drawable/back2"
	        android:tag="back"
	        android:background="@drawable/rhys_small_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
           				        

		
		<com.coversal.ucl.widget.Key 
		    android:id="@+id/right"
		    android:layout_below="@id/up"
		    android:layout_toRightOf="@id/up"
		    		    
	        android:src="@drawable/right"
	        android:tag="right"
	        android:background="@drawable/rhys_large_key"
	        android:scaleType="centerInside"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="-15dp"
	        android:layout_marginLeft="-15dp"/>
		
		
		<com.coversal.ucl.widget.Key 
		    android:layout_alignLeft="@id/right"
		    android:layout_above="@id/right"
		    android:layout_marginBottom="25dp"
			android:layout_marginLeft="25dp"
		    
	        android:src="@drawable/ok"
	        android:tag="ok"
	        android:background="@drawable/rhys_small_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
		       	
		<com.coversal.ucl.widget.Key
		    android:layout_below="@id/left"
		     android:layout_alignLeft="@id/up"
		       		    
	        android:src="@drawable/down"
	        android:tag="down"
	        android:background="@drawable/rhys_large_key"
	        android:scaleType="centerInside"
            android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
        	android:layout_marginTop="-15dp"/>
    </com.coversal.ucl.widget.CoversalRelativeLayout>
    <!-- LinearLayout 
		android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    <TextView android:text="Gesture command"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
