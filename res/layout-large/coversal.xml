	<com.coversal.ucl.widget.CoversalRelativeLayout 
	    android:id="@+id/player_control"
	    android:layout_below="@id/dpad"
	     android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:layout_toRightOf="@id/volume"
	
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_marginBottom="1dp"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">

	   <com.coversal.ucl.widget.Key
	        android:id="@+id/rewind"	       
			
			android:tag="rewind"
	        android:src="@drawable/coversal_rewind"
	        android:background="@drawable/rhys_medium_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>   
	        	    
	    <com.coversal.ucl.widget.Key
	        android:id="@+id/play"
			android:layout_toRightOf="@id/rewind"
			android:layout_marginTop="-9dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"

		  	android:tag="play_pause"
	        android:src="@drawable/coversal_play"
	        android:background="@drawable/rhys_large_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>

	    <com.coversal.ucl.widget.Key
	        android:layout_toRightOf="@id/play"
	        android:tag="forward" 
	        android:src="@drawable/coversal_forward"
	        android:background="@drawable/rhys_medium_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/> 
	        
		<com.coversal.ucl.widget.Key
		    android:layout_below="@id/play"
		    android:layout_alignLeft="@id/play"
		    android:layout_marginLeft="-50dp"
		       	    
	       	android:tag="previous"
	        android:src="@drawable/coversal_previous"
	        android:background="@drawable/rhys_small_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
		
	   	<com.coversal.ucl.widget.Key
	   	    android:layout_below="@id/play"
	   	    android:layout_alignRight="@id/play"
	   	    android:layout_marginRight="-50dp"
	  	   	       	    
	       	android:tag="next"
	        android:src="@drawable/coversal_next"
	        android:background="@drawable/rhys_small_key"
	        android:scaleType="centerInside"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
	</com.coversal.ucl.widget.CoversalRelativeLayout>

	<LinearLayout 
	    android:layout_below="@id/dpad"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_toRightOf="@id/volume"
	
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_marginBottom="1dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
		    
	   	<com.coversal.ucl.widget.Key   	    
	       	android:tag="stop"
	        android:src="@drawable/coversal_stop"
	        android:background="@drawable/rhys_medium_key"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"/>
	</LinearLayout>		  	

