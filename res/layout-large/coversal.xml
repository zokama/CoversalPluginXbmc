<com.coversal.ucl.widget.CoversalLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:uclib="namespace"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:layout_weight="1"
    android:tag="landscape_mode">
    

	
<com.coversal.ucl.widget.CoversalLayout 
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/coversal_bg_playing_media"
    android:layout_height="60dp"
    android:gravity="center">
        <TextView 
	    	android:tag="controlset_name"
	    	android:text="Control Set name"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textColor="#5f8dd3"
   			android:textSize="15sp"
   			android:singleLine="true"
	    	android:gravity="left"
	    	android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
	    	android:shadowColor="#000"
	    	android:shadowRadius="3"/>
        
    <TextView 
		android:tag="playing_media_textview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="20sp"
		android:textColor="#ffffff"
		android:text="-"
		android:singleLine="true"
	    android:ellipsize="marquee"
	    android:marqueeRepeatLimit="marquee_forever" 
	    android:gravity="center"
	    android:layout_weight="1"/>
</com.coversal.ucl.widget.CoversalLayout>    


