	    android:background="@drawable/default_key"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_margin="2dp"/>
	    
	<com.coversal.ucl.widget.Key
	    android:tag="custom3"
