<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coversal.plugin.xbmc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:icon="@drawable/xbmc"
        android:label="@string/app_name" >
        
                <service android:name=".XbmcAnnouncer">
            <intent-filter>
                <action android:name="coversal.intent.action.PROFILE" />
                <category android:name="XBMC" />
            </intent-filter>
            <intent-filter>
                <action android:name="coversal.intent.action.LAYOUT" />
                <category android:name="xbmc_landscape"/>
            </intent-filter>    
        </service>
    </application>

</manifest>